<div>
  <h1>
    Failed Charges</h1>
  <ul>
    <% for failed_charge in @failed_charges %>
      <li>
        <span style="background-color: #FF0000">
          Name: <%= failed_charge.customer.first_name + " " + failed_charge.customer.last_name %>,
          Charge Amount: <%=  failed_charge.amount.to_s + " " + failed_charge.currency%>, 
          Date: <%= failed_charge.created_at.strftime("%m/%d/%Y") %>
        </span>
      </li>
  
    <%  end %>
  </ul>
</div>
<div>
  <h1>
    Disputed Charges</h1>
