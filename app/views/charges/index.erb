    <% for disputed_charge in @disputed_charges %>
      <li>
        <span style="background-color: #FF5400">
          Name: <%= disputed_charge.customer.first_name + " " + disputed_charge.customer.last_name %>,
          Charge Amount: <%=  disputed_charge.amount.to_s + " " + disputed_charge.currency%>, 
          Date: <%= disputed_charge.created_at.strftime("%m/%d/%Y") %>
        </span>
      </li>
  
    <%  end %>
  </ul>
</div>
<div>
  <h1>
    Successful Charges</h1>
  <ul>
    <% for successful_charge in @successful_charges %>
      <li>
          Name: <%= successful_charge.customer.first_name + " " + successful_charge.customer.last_name %>,
          Charge Amount: <%=  successful_charge.amount.to_s + " " + successful_charge.currency%>, 
          Date: <%= successful_charge.created_at.strftime("%m/%d/%Y")  %>
      </li>
  
    <%  end %>
  </ul>
</div>
